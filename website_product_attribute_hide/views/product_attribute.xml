<?xml version="1.0" encoding="utf-8"?>
<odoo>
   
    <record model="ir.ui.view" id="inherite_product_attribute_form_view">
        <field name="name">inherite.product.attribute.form.view</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <field name="create_variant" position="after">
                <field name="website_hidden" />
            </field>
        </field>
    </record>
    
    <record model="ir.ui.view" id="inherite_product_attribute_tree_view">
        <field name="name">inherite.product.attribute.tree</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.attribute_tree_view"/>
        <field name="arch" type="xml">
            <field name="create_variant" position="after">
                <field name="website_hidden" />
            </field>
        </field>
    </record>
    
</odoo>